<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="323.0" prefWidth="437.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="maven_fx.ecommercefx.PrimaryController">
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="398.0">
         <children>
            <Label layoutX="312.0" layoutY="249.0" text="Save menu" />
            <Button fx:id="loadMenuButton" layoutX="164.0" layoutY="245.0" onAction="#goToLoadMenu" text="Load product from DB" />
            <Label layoutX="17.0" layoutY="14.0" prefHeight="18.0" prefWidth="82.0" text="Product name:" />
            <TextField fx:id="inputName" layoutX="124.0" layoutY="10.0" promptText="Type product name..." />
            <Label layoutX="17.0" layoutY="44.0" prefHeight="18.0" prefWidth="82.0" text="Price:" />
            <TextField fx:id="inputPrice" layoutX="124.0" layoutY="41.0" promptText="Ex: 99.99" />
            <Label layoutX="17.0" layoutY="76.0" text="Currency code:" />
            <TextField fx:id="inputCurrencyCode" layoutX="124.0" layoutY="72.0" promptText="Ex: EUR" />
            <Label layoutX="17.0" layoutY="108.0" text="Expiration date:" />
            <TextField fx:id="inputExpDate" layoutX="124.0" layoutY="104.0" promptText="yyyy-mm-dd" />
            <Label layoutX="17.0" layoutY="142.0" text="Manufactured in:" />
            <TextField fx:id="inputManufactured" layoutX="124.0" layoutY="138.0" promptText="Ex: Republic of Moldova" />
            <Label layoutX="17.0" layoutY="175.0" text="Category:" />
            <TextField fx:id="inputCategory" layoutX="124.0" layoutY="172.0" promptText="Ex: Books" />
            <Label layoutX="17.0" layoutY="208.0" text="Quantity:" />
            <TextField fx:id="inputQuantity" layoutX="124.0" layoutY="205.0" promptText="Ex: 2" />
            <Button fx:id="saveButton" layoutX="16.0" layoutY="245.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="134.0" onAction="#saveProduct" text="Save product to DB" />
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
